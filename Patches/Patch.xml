<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationInsert">
        <xpath>*/ThinkTreeDef[defName = "Humanlike"]/thinkRoot[@Class = "ThinkNode_Priority"]/subNodes/li[@Class="ThinkNode_QueuedJob"]</xpath> <!--Priority is important here, hence the insert after this specific subNode-->
        <value>
            <!-- Wait if drafted -->
            <li Class="GuardDuty.ThinkNode_ConditionalWorkTypeDef">
                <workTypeDef>GuardDuty</workTypeDef>
                <makeAgro>true</makeAgro>
                <subNodes>
                    <li Class="ThinkNode_Priority">
                        <subNodes>
                            <li Class="JobGiver_AIFightEnemies">
                                <targetAcquireRadius>200</targetAcquireRadius>
                                <targetKeepRadius>72</targetKeepRadius>
                            </li>
                            <li Class="JobGiver_AIGotoNearestHostile" />
                            <li Class="GuardDuty.JobGiver_Capture">
                                <targetAcquireRadius>200</targetAcquireRadius>
                            </li>
                        </subNodes>
                    </li>
                </subNodes>
            </li>
        </value>
    </Operation>
</Patch>